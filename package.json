{
  "name": "emoj-ie",
  "private": true,
  "version": "1.0.0",
  "description": "Static emoji site build and QA scripts",
  "scripts": {
    "serve": "python3 -m http.server 4173",
    "build": "node utils/build/index.mjs",
    "build:check": "node utils/build/index.mjs --check",
    "test": "node --test tests/*.test.mjs",
    "test:phase1": "node --test tests/phase1-generator.test.mjs",
    "test:phase2": "node --test tests/phase2-home-utils.test.mjs",
    "test:phase3": "node --test tests/phase3-accessibility-style.test.mjs",
    "test:phase4": "node --test tests/phase4-seo-schema.test.mjs",
    "test:phase5": "node --test tests/phase5-sw-assets.test.mjs",
    "lint:links": "node utils/qa/check-links.mjs",
    "test:a11y-smoke": "node --test tests/phase3-accessibility-style.test.mjs",
    "test:playwright-smoke": "node utils/qa/playwright-smoke.mjs",
    "test:lighthouse-budget": "node utils/qa/lighthouse-budget.mjs",
    "test:phase6": "node --test tests/phase6-analytics-ci.test.mjs"
  }
}
